                    Let Operand   = 0
                End If
            End If
        End If

        Build_ValueL(Button_Value)

        If Op = 1 Then
            Show_ValuesSubL(Operate1L)
            Let Operate2L = 0
            Let ResultL   = 0
        Else
            If Operate2L > 0 Then
                Show_ValuesSubL(Operate2L)
            Else
                If ResultL = 0 Then
                    Show_ValuesSubL(Operate1L)
                End If
            End If
        End If

