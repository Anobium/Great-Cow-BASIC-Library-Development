Sub Check_Mode
    Wait 50 mS
    Get_Buttons

    If Button_Value = BtMode Then
        Wait 100 mS
        Get_Buttons

        If Button_Value = BtMode Then
            Wait 100 mS
            Get_Buttons

            If Button_Value = BtMode Then
                Let Button_Value = BtClr
            Else
                Let Button_Value = BtMode
            End If
        Else
            Let Button_Value = BtMode
        End If
    Else
        Let Button_Value = BtMode
    End If

    If Button_Value = BtMode Then
        Let Mode = Mode + 1
        If Mode > M_Hex Then
            Let Mode = M_Bin
        End If
        If Bit_Mode = Bit_32 Then 'No Binary in 32bit
            If Mode = M_Bin Then
                Let Mode = Mode + 1
            End If
        End If
        EpRead  (EpMode, Temp) 'Only write if value is different'
        If Temp <> Mode Then
            EpWrite (EpMode, Mode)
        End If
    End If

End Sub

